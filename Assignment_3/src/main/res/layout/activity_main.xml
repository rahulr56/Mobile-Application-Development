<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.inclass4.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passwordCount"
        android:id="@+id/textViewPasswordCount"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyString"
        android:id="@+id/textViewPasswordCountOutput"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewPasswordCount"
        android:layout_toEndOf="@+id/textViewPasswordCount"
        android:textSize="20sp"
        android:layout_marginLeft="50sp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarPasswordCount"
        android:layout_below="@+id/textViewPasswordCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:max="9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passwordLength"
        android:id="@+id/textViewPasswordLength"
        android:layout_below="@+id/seekBarPasswordCount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:text="@string/emptyString"
        android:textSize="20sp"
        android:id="@+id/textViewPasswordLengthOutput"
        android:layout_alignBottom="@+id/textViewPasswordLength"
        android:layout_toRightOf="@+id/textViewPasswordCount"
        android:layout_toEndOf="@+id/textViewPasswordCount" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarPasswordLength"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textViewPasswordLength"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:max="15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/textViewPassword"
        android:layout_below="@+id/seekBarPasswordLength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyString"
        android:id="@+id/textViewShowPassword"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/textViewPassword"
        android:layout_alignTop="@+id/textViewPassword"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:paddingTop="3dp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/textViewPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generatePasswordThread"
        android:id="@+id/buttonGeneratePassword"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textViewPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generatePasswordAsync"
        android:id="@+id/buttonGeneratePasswordAsync"
        android:layout_below="@+id/buttonGeneratePassword"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20sp"
        android:layout_alignParentStart="true" />
</RelativeLayout>