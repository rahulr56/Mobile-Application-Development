<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.falc0n.httpconnectiondemo.MainActivity">

    <Spinner
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="25dp"
        android:id="@+id/spinnerSearch" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGo"
        android:layout_toEndOf="@id/spinnerSearch"
        android:text="@string/goString"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="330sp"
        android:layout_marginTop="15sp"
        android:padding="10sp"
        android:id="@+id/imageViewSearchedImage"
        android:layout_below="@id/buttonGo"/>
    <ImageButton
        android:layout_width="40sp"
        android:layout_height="60sp"
        android:layout_marginTop="15sp"
        android:layout_alignStart="@id/imageViewSearchedImage"
        android:layout_below="@id/imageViewSearchedImage"
        android:id="@+id/imageViewLeft"
        android:src="@drawable/left"/>
    <ImageButton
        android:layout_width="40sp"
        android:layout_height="60sp"
        android:layout_marginTop="15sp"
        android:layout_alignEnd="@id/imageViewSearchedImage"
        android:layout_below="@id/imageViewSearchedImage"
        android:id="@+id/imageViewRight"
        android:src="@drawable/right"/>

    <TextView
        android:text="@string/emptyString"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:id="@+id/textViewNoImage"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageViewSearchedImage"
        android:layout_alignParentStart="true" />
</RelativeLayout>
