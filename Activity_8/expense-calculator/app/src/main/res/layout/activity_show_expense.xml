<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.libraryguest2.expensecaluculator.ShowExpenseActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showExpenseHead"
        android:text="@string/showExpense"
        android:textSize="25sp"
        android:gravity="center"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showExpenseHead"
        android:layout_marginTop="15sp">
        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewShowName"
            android:text="@string/showName"
            android:textSize="20sp"
            android:layout_weight="0.05"
            android:paddingLeft="15sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextShowName"
            android:layout_weight="0.15"
            android:layout_marginRight="40sp"
            android:text="@string/emptyString"/>
        </TableRow>
        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewShowCategory"
            android:text="@string/showCategory"
            android:textSize="20sp"
            android:layout_weight="0.05"
            android:paddingLeft="15sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextShowCategory"
            android:layout_weight="0.15"
            android:layout_marginRight="40sp"
            android:text="@string/emptyString"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewShowAmount"
                android:text="@string/showAmount"
                android:textSize="20sp"
                android:layout_weight="0.05"
                android:paddingLeft="15sp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextShowAmount"
                android:layout_weight="0.15"
                android:layout_marginRight="40sp"
                android:text="@string/emptyString"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewShowDate"
                android:text="@string/showDate"
                android:textSize="20sp"
                android:layout_weight="0.05"
                android:paddingLeft="15sp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextShowDate"
                android:layout_weight="0.15"
                android:layout_marginRight="40sp"
                android:text="@string/emptyString"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewShowReceipt"
                android:text="@string/expenseReceipt"
                android:textSize="20sp"
                android:layout_marginLeft="120sp"/>
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180sp"
                android:id="@+id/imageViewReceipt"
                android:src="@drawable/receipt_scan"
                />
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageSwitchFirst"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/ic_first_page_black_24dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageSwitchPrev"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/ic_chevron_left_black_24dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:id="@+id/buttonFinishShowExpenses"
                    android:text="@string/finish"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageSwitchNext"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/ic_chevron_right_black_24dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageSwitchLast"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="10sp"
                    android:src="@drawable/ic_last_page_black_24dp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
